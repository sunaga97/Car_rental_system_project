<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="CaRMS-ejbPU" transaction-type="JTA">
    <jta-data-source>jdbc/CaRMS</jta-data-source>
    <class>Entity.Car</class>
    <class>Entity.CarCategory</class>
    <class>Entity.CarModel</class>
    <class>Entity.Customer</class>
    <class>Entity.Employee</class>
    <class>Entity.Outlet</class>
    <class>Entity.Partner</class>
    <class>Entity.RentalRate</class>
    <class>Entity.RentalTransaction</class>
    <class>Entity.Reservation</class>
    <class>Entity.TransitRecord</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
